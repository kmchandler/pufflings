generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model family {
  id          Int     @id @default(autoincrement())
  family_name String  @db.VarChar(255)
  user_id     String  @unique
  children    child[]
}

model child {
  id        Int       @id @default(autoincrement())
  family_id Int
  name      String
  family    family    @relation(fields: [family_id], references: [id])
  diapers   diaper[]
  feeds     feed[]
  medicals  medical[]
  sleeps    sleep[]
}

model diaper {
  id                  Int      @id @default(autoincrement())
  child_id            Int
  time_of_last_change DateTime @default(now())
  user_id             String
  type                String
  child               child    @relation(fields: [child_id], references: [id])
}

model feed {
  id         Int      @id @default(autoincrement())
  child_id   Int
  start_time DateTime
  end_time   DateTime
  amount     Decimal
  user_id    String
  child      child    @relation(fields: [child_id], references: [id])
}

model sleep {
  id         Int      @id @default(autoincrement())
  child_id   Int
  start_time DateTime
  end_time   DateTime
  user_id    String
  child      child    @relation(fields: [child_id], references: [id])
}

model medical {
  id       Int      @id @default(autoincrement())
  child_id Int
  type     String
  notes    String
  time     DateTime @default(now())
  user_id  String
  child    child    @relation(fields: [child_id], references: [id])
}
